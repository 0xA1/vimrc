badd $MYVIMRC
badd ~/.bashrc

set nocompatible
set hlsearch
set bs=2
set tabstop=3
set shiftwidth=3
set colorcolumn=72
set background=dark
set autoindent
set expandtab
set nowrap
set mouse=a
set ruler
set number
colorscheme shadesofamber
set guifont=Hack\ 9
set autochdir
set printfont:courier:h6
syntax enable
set listchars=trail:*
set guioptions-=m
set guioptions-=T
hi Search guifg=#ffffff
hi Search guibg=#ff00ff
set ic
set statusline=%<%f\ \[%n\]\ %h%m%r%=%-14.(%l,%c%V%)\ %P
