badd $MYVIMRC
badd ~/.bashrc

set nocompatible
set hlsearch
set bs=2
set tabstop=2
set shiftwidth=2
set colorcolumn=72
set background=dark
set autoindent
set expandtab
set nowrap
set mouse=a
set ruler
set number
colorscheme vividchalk
hi Search guifg=#000000
hi Search guibg=#ff00ff
hi Search 
set guifont=Hack\ 9
set autochdir
set printfont:courier:h6
syntax enable
set listchars=trail:*
set guioptions-=m
set guioptions-=T
